<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_engView"
        android:layout_width="267dp"
        android:layout_height="103dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rusView"
        android:layout_width="267dp"
        android:layout_height="300dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/rounded"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/green_btn"
        android:src="@drawable/green_btn"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toStartOf="@+id/yellow_btn"
        app:layout_constraintTop_toBottomOf="@+id/tv_rusView" />

    <ImageView
        android:id="@+id/yellow_btn"
        android:src="@drawable/yellow_btn"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rusView" />

    <ImageView
        android:id="@+id/red_btn"
        android:src="@drawable/red_btn"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/yellow_btn"
        app:layout_constraintTop_toBottomOf="@+id/tv_rusView" />

</androidx.constraintlayout.widget.ConstraintLayout>